{
  "dashboard": {
    "id": null,
    "title": "Cluster Performance Comparison",
    "tags": ["multi-cluster", "comparison", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Resource Efficiency Comparison",
        "type": "bargauge",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "avg(rate(container_cpu_usage_seconds_total{id=\"/\"}[5m])) by (cluster)",
            "legendFormat": "{{cluster}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 0.7 },
                { "color": "red", "value": 0.9 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Pod Density",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "sum(kube_pod_info) by (cluster)",
            "legendFormat": "{{cluster}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Number of Pods",
            "min": 0
          }
        ]
      },
      {
        "id": 3,
        "title": "Node Count",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "count(kube_node_info) by (cluster)",
            "legendFormat": "{{cluster}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Number of Nodes",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "Network Traffic per Cluster",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "sum(rate(container_network_transmit_bytes_total[5m])) by (cluster)",
            "legendFormat": "{{cluster}} - TX",
            "refId": "A"
          },
          {
            "expr": "sum(rate(container_network_receive_bytes_total[5m])) by (cluster)",
            "legendFormat": "{{cluster}} - RX",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Bytes/sec",
            "min": 0,
            "format": "bytes"
          }
        ]
      },
      {
        "id": 5,
        "title": "API Server Latency",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(apiserver_request_duration_seconds_bucket[5m])) by (cluster)",
            "legendFormat": "{{cluster}} - 95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(apiserver_request_duration_seconds_bucket[5m])) by (cluster)",
            "legendFormat": "{{cluster}} - 50th percentile",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Latency (seconds)",
            "min": 0
          }
        ]
      },
      {
        "id": 6,
        "title": "Storage I/O",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "targets": [
          {
            "expr": "sum(rate(node_disk_io_time_seconds_total[5m])) by (cluster)",
            "legendFormat": "{{cluster}} - I/O Time",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "I/O Time (seconds/sec)",
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "Cost per Cluster",
        "type": "stat",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
        "targets": [
          {
            "expr": "sum(kube_node_status_capacity_cpu_cores * 0.05 + kube_node_status_capacity_memory_bytes / 1024/1024/1024 * 0.01) by (cluster)",
            "legendFormat": "{{cluster}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "mappings": []
          }
        }
      },
      {
        "id": 8,
        "title": "Deployment Success Rate",
        "type": "stat",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
        "targets": [
          {
            "expr": "sum(kube_deployment_status_replicas_available) by (cluster) / sum(kube_deployment_spec_replicas) by (cluster)",
            "legendFormat": "{{cluster}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 0.95 },
                { "color": "green", "value": 0.99 }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Service Mesh Health",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 },
        "targets": [
          {
            "expr": "sum(rate(hubble_flows_processed_total{verdict=\"forwarded\"}[5m])) by (cluster) / sum(rate(hubble_flows_processed_total[5m])) by (cluster)",
            "legendFormat": "{{cluster}} - Forward Rate",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Forward Rate",
            "max": 1,
            "min": 0,
            "format": "percentunit"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}